<!DOCTYPE tiles-definitions PUBLIC  "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
    "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>
    <!-- BASE DE LA APP WEB - Puede agregarse un jsp footer. -->
    <definition name="baselayout" template="/WEB-INF/tiles/baselayout.jsp">
        <put-attribute name="title" value="Videoteca - FII-UNP " />
        <put-attribute name="menu" value="/templates/menu.jsp"/>
        <put-attribute name="contenido" value="/WEB-INF/tiles/contenido.jsp"/>
    </definition>

    <definition name="cabeza" template="/WEB-INF/tiles/cabeza.jsp" >
    </definition>
            
    <definition name="topSection" template="/WEB-INF/tiles/top.jsp">
        <put-attribute name="title" value="Videoteca - FII-UNP" />
        <put-attribute name="menu" value="/templates/menu.jsp" />
        <put-attribute name="banner" value="/templates/banner.jsp"/>
    </definition>
    
    <definition name="botomSection" template="/WEB-INF/tiles/botom.jsp">
        <put-attribute name="title" value="Videoteca - FII-UNP" />
        <put-attribute name="footer" value="/templates/footer.jsp"/>
    </definition>
    
    <!-- Extenderan de baselayout, cambiando el contenido, scripts...-->
    <definition name="login" extends="baselayout">
        <put-attribute name="contenido" value="/templates/login.jsp"/>
        <put-attribute name="script" value="" />
    </definition>
    
    <definition name="bienvenido" extends="baselayout">
        <put-attribute name="menu" value="/templates/menu.jsp"/>
    </definition>
    
    <definition name="nosotros" extends="baselayout">
        <put-attribute name="menu" value="/templates/menu.jsp"/>
        <put-attribute name="contenido" value="/templates/nosotros.jsp"/>
    </definition>

</tiles-definitions>

